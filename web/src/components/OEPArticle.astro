---
import StatusBadge from './StatusBadge.astro';
import { marked } from 'marked';

interface Props {
  oep: number;
  title: string;
  type: 'technical' | 'process' | 'informational';
  status: 'ideation' | 'discussion' | 'accepted' | 'living' | 'abandoned';
  labels: string[];
  authors: string;
  created: Date;
  body: string;
  discussion?: string;
  /** Optional banner for preview mode */
  previewBanner?: {
    prNumber: number;
    prUrl: string;
    user: string;
  };
}

const { oep, title, type, status, labels, authors, created, body, discussion, previewBanner } = Astro.props;

// Helper to generate slug from heading text
function slugify(text: string): string {
  return text
    .toLowerCase()
    .replace(/[^\w\s-]/g, '')
    .replace(/\s+/g, '-');
}

// Configure marked to add IDs to headings
const renderer = new marked.Renderer();
renderer.heading = ({ text, depth }) => {
  const slug = slugify(text);
  return `<h${depth} id="${slug}">${text}</h${depth}>`;
};
marked.use({ renderer });

// Render markdown body to HTML
const htmlContent = await marked(body || '');

// Extract headings for table of contents, grouping h3s under their parent h2
type TocItem = { level: number; text: string; slug: string; children?: TocItem[] };
const tocItems: TocItem[] = [];
const headingRegex = /^(#{2,3})\s+(.+)$/gm;
let match;
let currentH2: TocItem | null = null;

while ((match = headingRegex.exec(body || '')) !== null) {
  const level = match[1].length;
  const text = match[2];
  const slug = slugify(text);

  if (level === 2) {
    currentH2 = { level, text, slug, children: [] };
    tocItems.push(currentH2);
  } else if (level === 3 && currentH2) {
    currentH2.children!.push({ level, text, slug });
  }
}

// Split authors on comma and trim whitespace
const authorsList = authors.split(',').map((a: string) => a.trim());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// Determine the discussion URL (from props or previewBanner)
const discussionUrl = discussion || previewBanner?.prUrl;
---

<div class="page-container">
  <article class="article">
    <header class="article-header">
      <div class="article-meta">
        <span class="oep-number">OEP-{String(oep).padStart(4, '0')}</span>
        <StatusBadge status={status} />
      </div>
      <h1 class="article-title">{title}</h1>

      <dl class="article-details">
        <div class="detail-row">
          <dt>Type</dt>
          <dd><span class="type-badge">{type}</span></dd>
        </div>
        {labels.length > 0 && (
          <div class="detail-row">
            <dt>Labels</dt>
            <dd class="labels-list">
              {labels.map((label) => (
                <span class="label-tag">{label}</span>
              ))}
            </dd>
          </div>
        )}
        <div class="detail-row">
          <dt>Created</dt>
          <dd>{formatDate(created)}</dd>
        </div>
        <div class="detail-row detail-row-authors">
          <dt>{authorsList.length > 1 ? 'Authors' : 'Author'}</dt>
          <dd class="authors-list">
            {authorsList.map((a) => (
              <span class="author-entry">{a}</span>
            ))}
          </dd>
        </div>
      </dl>

      {(previewBanner || (status === 'ideation' || status === 'discussion')) && discussionUrl && (
        <div class="discussion-cta">
          <p class="discussion-text">This proposal is open for feedback.</p>
          <a href={discussionUrl} class="discussion-btn" target="_blank" rel="noopener">Join the discussion on GitHub →</a>
        </div>
      )}
    </header>

    <!-- Mobile TOC (shown above body on small screens) -->
    <nav class="toc-mobile">
      <div class="toc-mobile-header">Contents</div>
      <ul class="toc-list">
        {tocItems.map((item) => (
          <li class="toc-section">
            <a href={`#${item.slug}`} class="toc-link">
              <span class="toc-chevron">›</span>
              {item.text}
            </a>
            {item.children && item.children.length > 0 && (
              <ul class="toc-children">
                {item.children.map((child) => (
                  <li>
                    <a href={`#${child.slug}`} class="toc-child-link">{child.text}</a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        ))}
      </ul>
    </nav>

    <div class="content-with-toc">
      <aside class="toc">
        <nav class="toc-nav">
          <ul class="toc-list">
            {tocItems.map((item) => (
              <li class="toc-section">
                <a href={`#${item.slug}`} class="toc-link">
                  <span class="toc-chevron">›</span>
                  {item.text}
                </a>
                {item.children && item.children.length > 0 && (
                  <ul class="toc-children">
                    {item.children.map((child) => (
                      <li>
                        <a href={`#${child.slug}`} class="toc-child-link">{child.text}</a>
                      </li>
                    ))}
                  </ul>
                )}
              </li>
            ))}
          </ul>
        </nav>
      </aside>

      <div class="prose" set:html={htmlContent} />
    </div>
  </article>
</div>

<style>
  /* Discussion CTA */
  .discussion-cta {
    margin-top: var(--space-8);
    padding: var(--space-6);
    background: hsl(160, 30%, 96%);
    border-left: 3px solid var(--color-accent);
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
  }

  .discussion-text {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0 0 var(--space-3) 0;
  }

  .discussion-btn {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    padding: var(--space-2) var(--space-4);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    transition: all var(--transition-fast);
  }

  .discussion-btn:hover {
    border-color: var(--color-text);
    background: var(--color-bg);
  }

  /* Base Styles (Mobile-first) */
  .page-container {
    max-width: 100vw;
    box-sizing: border-box;
    margin: 0 auto;
    padding: 0 20px;
  }

  .article {
    padding: var(--space-8) 0 var(--space-16);
  }

  .article-header {
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-6);
    border-bottom: 1px solid var(--color-border);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .oep-number {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .article-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 8vw, 2.5rem);
    font-weight: 400;
    letter-spacing: -0.02em;
    line-height: var(--leading-tight);
    margin-bottom: var(--space-8);
  }

  /* Metadata - stacked on mobile */
  .article-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin: 0;
    padding: 0;
  }

  .detail-row {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .detail-row dt {
    font-family: var(--font-mono);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-text-subtle);
  }

  .detail-row dd {
    margin: 0;
    font-size: var(--text-base);
    color: var(--color-text);
  }

  .labels-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .label-tag {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: lowercase;
    padding: var(--space-1) var(--space-2);
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
  }

  .type-badge {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: lowercase;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    /* Neutral gray styling - same as labels */
    color: var(--color-text-muted);
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
  }

  .authors-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  /* Content grid - single column on mobile */
  .content-with-toc {
    display: block;
  }

  /* Desktop TOC - hidden on mobile */
  .toc {
    display: none;
  }

  /* Mobile TOC */
  .toc-mobile {
    margin-top: var(--space-8);
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-8);
    border-bottom: 1px solid var(--color-border);
  }

  .toc-mobile-header {
    font-family: var(--font-mono);
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-text-subtle);
    margin-bottom: var(--space-4);
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-section {
    margin-bottom: var(--space-1);
  }

  .toc-link {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    padding: var(--space-2) 0;
    font-size: var(--text-base);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .toc-link:hover {
    color: var(--color-text);
  }

  .toc-chevron {
    color: var(--color-text-subtle);
    font-size: 14px;
    line-height: 1.5;
    flex-shrink: 0;
  }

  .toc-children {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-2) calc(var(--space-2) + 14px);
  }

  .toc-child-link {
    display: block;
    padding: var(--space-1) 0;
    font-size: var(--text-sm);
    color: var(--color-text-subtle);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .toc-child-link:hover {
    color: var(--color-text);
  }

  .prose {
    max-width: 100%;
  }

  /* Tablet (≥768px) */
  @media (min-width: 768px) {
    .page-container {
      padding: 0 var(--space-8);
    }

    .article {
      padding: var(--space-10) 0 var(--space-20);
    }

    .article-title {
      font-size: var(--text-4xl);
    }

    .article-details {
      flex-direction: row;
      gap: var(--space-12);
    }

    .detail-row dd {
      font-size: var(--text-sm);
    }

    .toc-mobile {
      margin-top: var(--space-12);
      margin-bottom: var(--space-12);
    }

    .toc-link {
      font-size: var(--text-sm);
    }

    .toc-chevron {
      font-size: 12px;
    }

    .toc-child-link {
      font-size: 13px;
    }
  }

  /* Desktop (≥1024px) - Show sidebar TOC */
  @media (min-width: 1024px) {
    .page-container {
      max-width: 1100px;
    }

    .article {
      padding: var(--space-12) 0;
    }

    .article-header {
      padding-bottom: var(--space-8);
      margin-bottom: var(--space-8);
      border-bottom: none;
    }

    .article-details {
      padding: var(--space-6) 0;
      border-top: 1px solid var(--color-border);
      border-bottom: 1px solid var(--color-border);
    }

    /* Hide mobile TOC, show desktop sidebar */
    .toc-mobile {
      display: none;
    }

    .toc {
      display: block;
      position: relative;
    }

    .toc-nav {
      position: sticky;
      top: var(--space-8);
    }

    .content-with-toc {
      display: grid;
      grid-template-columns: 180px 1fr;
      gap: var(--space-10);
    }

    .prose {
      max-width: 100%;
    }
  }
</style>

<style is:global>
  /* Fix gradient bleeding onto text - add padding to h1 background */
  .prose h1 {
    padding-bottom: var(--space-6);
  }

  .prose h1::after {
    bottom: 0;
  }

  /* Align first heading with TOC */
  .prose h1:first-child {
    margin-top: 0;
    padding-top: 0;
  }

  /* Remove large top margin from first h2 in prose */
  .prose h2:first-of-type {
    margin-top: 0;
  }

  /* Mobile: edge-to-edge code blocks and tables */
  @media (max-width: 640px) {
    .prose pre {
      margin-left: -20px;
      margin-right: -20px;
      padding-left: 20px;
      padding-right: 20px;
      border-radius: 0;
    }

    .prose table {
      display: block;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
  }
</style>
