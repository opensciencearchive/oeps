---
interface Props {
  status: 'ideation' | 'discussion' | 'accepted' | 'living' | 'abandoned';
}

const { status } = Astro.props;
---

<span class:list={['badge', `status-${status}`]}>
  {status}
</span>

<style>
  .badge {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-sm);
  }

  /* Ideation - light purple (early stage, exploratory) */
  .status-ideation {
    color: hsl(270, 50%, 40%);
    background: hsl(270, 45%, 93%);
  }

  /* Discussion - amber/yellow (active engagement) */
  .status-discussion {
    color: hsl(35, 80%, 30%);
    background: hsl(40, 80%, 92%);
  }

  /* Accepted - sage green (ratified, part of spec) */
  .status-accepted {
    color: hsl(160, 40%, 32%);
    background: hsl(160, 35%, 90%);
  }

  /* Living - blue (continuously updated) */
  .status-living {
    color: hsl(210, 50%, 35%);
    background: hsl(210, 50%, 92%);
  }

  /* Abandoned - muted gray */
  .status-abandoned {
    color: var(--color-text-muted);
    background: var(--color-bg-alt);
  }
</style>
