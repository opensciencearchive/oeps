---
import { Octokit } from '@octokit/rest';
import { marked } from 'marked';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import StatusBadge from '../../components/StatusBadge.astro';

// SSR mode - render on demand
export const prerender = false;

const { pr } = Astro.params;
const prNumber = parseInt(pr || '0', 10);

const octokit = new Octokit({
  auth: import.meta.env.GITHUB_TOKEN,
});

let prData: {
  title: string;
  user: string;
  html_url: string;
  head_ref: string;
} | null = null;

let content = '';
let error = '';

try {
  // Fetch PR details
  const { data: prInfo } = await octokit.pulls.get({
    owner: 'opensciencearchive',
    repo: 'oeps',
    pull_number: prNumber,
  });

  prData = {
    title: prInfo.title,
    user: prInfo.user?.login ?? 'unknown',
    html_url: prInfo.html_url,
    head_ref: prInfo.head.ref,
  };

  // Fetch the files changed in the PR to find OEP files
  const { data: files } = await octokit.pulls.listFiles({
    owner: 'opensciencearchive',
    repo: 'oeps',
    pull_number: prNumber,
  });

  // Find the main OEP file (new or modified)
  const oepFile = files.find(
    (file) => /^oep-\d+\.md$/.test(file.filename) && file.status !== 'removed'
  );

  if (oepFile) {
    // Fetch the raw content from the PR branch
    const { data: fileContent } = await octokit.repos.getContent({
      owner: 'opensciencearchive',
      repo: 'oeps',
      path: oepFile.filename,
      ref: prInfo.head.ref,
    });

    if ('content' in fileContent && fileContent.content) {
      const rawContent = Buffer.from(fileContent.content, 'base64').toString('utf-8');

      // Remove frontmatter and get body
      const frontmatterMatch = rawContent.match(/^---\n[\s\S]*?\n---\n([\s\S]*)$/);
      content = frontmatterMatch ? frontmatterMatch[1] : rawContent;
    }
  } else {
    error = 'No OEP file found in this pull request.';
  }
} catch (e) {
  console.error('Error fetching PR:', e);
  error = `Failed to load PR #${prNumber}. It may not exist or the GitHub API rate limit was exceeded.`;
}

// Render markdown to HTML
const htmlContent = content ? await marked(content) : '';

// Set cache headers for stale-while-revalidate
Astro.response.headers.set('Cache-Control', 's-maxage=60, stale-while-revalidate');
---

<Layout title={prData ? `Preview: ${prData.title}` : `Preview: PR #${prNumber}`}>
  <Header />

  <div class="preview-banner">
    <div class="banner-inner">
      <span class="banner-icon">Preview Mode</span>
      <span class="banner-text">
        Content from <a href={prData?.html_url} target="_blank" rel="noopener">PR #{prNumber}</a>
        {prData && <span> by @{prData.user}</span>}
      </span>
    </div>
  </div>

  <main class="main">
    {error ? (
      <div class="error">
        <h1 class="error-title">Unable to Load Preview</h1>
        <p class="error-message">{error}</p>
        <a href="/" class="error-link">Back to OEPs</a>
      </div>
    ) : (
      <article class="article">
        <header class="article-header">
          <div class="article-meta">
            <span class="pr-number">PR #{prNumber}</span>
            <StatusBadge status="Review" />
          </div>
          <h1 class="article-title">{prData?.title}</h1>
        </header>

        <div class="prose" set:html={htmlContent} />
      </article>
    )}
  </main>

  <Footer />
</Layout>

<style>
  .preview-banner {
    background: hsl(45, 80%, 94%);
    border-bottom: 1px solid hsl(45, 60%, 80%);
    padding: var(--space-3) var(--space-6);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .banner-inner {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .banner-icon {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: hsl(45, 70%, 35%);
    background: hsl(45, 70%, 85%);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  .banner-text {
    font-size: var(--text-sm);
    color: hsl(45, 50%, 25%);
  }

  .banner-text a {
    color: hsl(45, 70%, 30%);
    font-weight: 500;
  }

  .main {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  .article {
    padding: var(--space-12) 0;
  }

  .article-header {
    padding-bottom: var(--space-10);
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-10);
  }

  .article-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .pr-number {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .article-title {
    font-family: var(--font-display);
    font-size: var(--text-4xl);
    font-weight: 400;
    letter-spacing: -0.02em;
    line-height: var(--leading-tight);
  }

  .error {
    padding: var(--space-20) 0;
    text-align: center;
  }

  .error-title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: 400;
    margin-bottom: var(--space-4);
  }

  .error-message {
    color: var(--color-text-muted);
    margin-bottom: var(--space-8);
  }

  .error-link {
    color: var(--color-accent);
    text-decoration: none;
  }

  .error-link:hover {
    text-decoration: underline;
  }
</style>
