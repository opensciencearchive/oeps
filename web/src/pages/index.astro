---
// Prerender at build time (SSG)
export const prerender = true;

import { getCollection } from 'astro:content';
import { Octokit } from '@octokit/rest';
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const oeps = await getCollection('oeps');
const sortedOeps = oeps.sort((a, b) => a.data.oep - b.data.oep);

// Categorize
const acceptedOeps = sortedOeps.filter(
  (oep) => oep.data.status === 'accepted' || oep.data.status === 'living'
);

const octokit = new Octokit({
  auth: import.meta.env.GITHUB_TOKEN,
});

// Type for PR OEP data (parsed from PR content)
type PROep = {
  number: number;
  oep: number;
  title: string;
  type: string;
  author: string;
  status: string;
  created: Date;
};

// Format date for display
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}

// Parse frontmatter from OEP markdown content
function parseFrontmatter(content: string): Record<string, string> {
  const match = content.match(/^---\n([\s\S]*?)\n---/);
  if (!match) return {};

  const result: Record<string, string> = {};
  for (const line of match[1].split('\n')) {
    const m = line.match(/^(\w+):\s*(.*)$/);
    if (m) result[m[1]] = m[2].replace(/^['"]|['"]$/g, '');
  }
  return result;
}

let openPRs: PROep[] = [];

try {
  const { data: prs } = await octokit.pulls.list({
    owner: 'opensciencearchive',
    repo: 'oeps',
    state: 'open',
  });

  // Fetch OEP content from each PR to get frontmatter
  openPRs = await Promise.all(
    prs.map(async (pr) => {
      try {
        // Get files changed in this PR
        const { data: files } = await octokit.pulls.listFiles({
          owner: 'opensciencearchive',
          repo: 'oeps',
          pull_number: pr.number,
        });

        // Find the OEP file (in oeps/ directory)
        const oepFile = files.find((f) => /^oeps\/OEP-\d+\.md$/i.test(f.filename));

        if (oepFile) {
          // Fetch the file content from the PR branch
          const { data: fileData } = await octokit.repos.getContent({
            owner: 'opensciencearchive',
            repo: 'oeps',
            path: oepFile.filename,
            ref: pr.head.ref,
          });

          if ('content' in fileData && fileData.content) {
            const content = Buffer.from(fileData.content, 'base64').toString('utf-8');
            const frontmatter = parseFrontmatter(content);

            // Skip drafts, only include review status
            const status = frontmatter.status?.toLowerCase() || 'draft';
            if (status === 'draft') {
              return null;
            }

            return {
              number: pr.number,
              oep: parseInt(frontmatter.oep || '0', 10),
              title: frontmatter.title || pr.title,
              type: frontmatter.type || 'technical',
              author: frontmatter.author?.split('<')[0].trim() || pr.user?.login || 'unknown',
              status: 'review',
              created: frontmatter.created ? new Date(frontmatter.created) : new Date(pr.created_at),
            };
          }
        }
      } catch (e) {
        // Fall back to PR data if we can't fetch content
      }

      // Fallback: skip PRs we can't parse (treat as draft)
      return null;
    })
  );

  // Filter out nulls (drafts and unparseable PRs)
  openPRs = openPRs.filter((pr): pr is PROep => pr !== null);
} catch (error) {
  console.error('Error fetching PRs:', error);
  // Leave openPRs empty on error
}
---

<Layout title="OEPs — OSA Enhancement Proposals">
  <Header />

  <main class="main">
    <!-- Header row -->
    <header class="page-header">
      <div class="header-content">
        <h1 class="page-title">Enhancement Proposals</h1>
        <p class="page-subtitle">Standards and specifications for the Open Science Archive protocol</p>
      </div>
      <a href="https://github.com/opensciencearchive/oeps" class="github-link" target="_blank" rel="noopener">
        View on GitHub →
      </a>
    </header>

    <!-- Collapsible info section -->
    <details class="info-section">
      <summary class="info-toggle">
        <span class="info-toggle-text">New here? Learn about OEPs</span>
        <span class="info-toggle-icon" aria-hidden="true"></span>
      </summary>
      <div class="info-content">
        <div class="info-block">
          <h2 class="info-title">What is an OEP?</h2>
          <p class="info-text">
            An OEP (OSA Enhancement Proposal) is a design document that describes a new feature, process, or guideline for the Open Science Archive protocol. OEPs provide a consistent and controlled path for proposing changes and documenting design decisions.
          </p>
        </div>

        <div class="info-block">
          <h2 class="info-title">Types</h2>
          <div class="types">
            <div class="type">
              <span class="type-name">Technical</span>
              <span class="type-desc">Protocol specifications, APIs, and implementation standards</span>
            </div>
            <div class="type">
              <span class="type-name">Process</span>
              <span class="type-desc">Governance processes, decision-making procedures</span>
            </div>
            <div class="type">
              <span class="type-name">Informational</span>
              <span class="type-desc">Guidelines, best practices, recommendations</span>
            </div>
          </div>
        </div>

        <div class="info-block">
          <h2 class="info-title">Contributing</h2>
          <p class="info-text">
            To propose a new OEP, read <a href="/oep/oep-0001">OEP-0001</a> for the process and guidelines, then <a href="https://github.com/opensciencearchive/oeps/pulls/new" target="_blank" rel="noopener">submit a pull request</a> with your proposal. To comment on existing proposals, visit the <a href="https://github.com/opensciencearchive/oeps/pulls" target="_blank" rel="noopener">open pull requests</a> on GitHub.
          </p>
        </div>
      </div>
    </details>

    <!-- Tabs and List - now primary content -->
    <section class="proposals">
      <div class="tabs" role="tablist">
        <button class="tab active" role="tab" aria-selected="true" data-tab="accepted">
          Accepted <span class="tab-count">{acceptedOeps.length}</span>
        </button>
        <button class="tab" role="tab" aria-selected="false" data-tab="review">
          Under Review <span class="tab-count">{openPRs.length}</span>
        </button>
      </div>

      <!-- Accepted Panel -->
      <div class="tab-panel active" id="accepted" role="tabpanel">
        {acceptedOeps.length > 0 ? (
          <ul class="oep-list">
            {acceptedOeps.map((oep) => (
              <li>
                <a href={`/oep/${oep.id}`} class="oep-card">
                  <div class="oep-card-badge">
                    <span class={`oep-type oep-type--${oep.data.type.toLowerCase()}`}>{oep.data.type}</span>
                  </div>
                  <div class="oep-card-content">
                    <span class="oep-num">OEP-{String(oep.data.oep).padStart(4, '0')}</span>
                    <span class="oep-title">{oep.data.title}</span>
                    <span class="oep-date">{formatDate(oep.data.created)}</span>
                  </div>
                </a>
              </li>
            ))}
          </ul>
        ) : (
          <p class="empty-state">No accepted OEPs yet. <a href="https://github.com/opensciencearchive/oeps" target="_blank" rel="noopener">Submit the first one →</a></p>
        )}
      </div>

      <!-- Review Panel -->
      <div class="tab-panel" id="review" role="tabpanel">
        {openPRs.length > 0 ? (
          <>
            <p class="review-prompt">These proposals are open for community feedback. Please join the discussion on GitHub.</p>
            <ul class="oep-list">
              {openPRs.map((pr) => (
                <li>
                  <a href={`/preview/${pr.number}`} class="oep-card">
                    <div class="oep-card-badge">
                      <span class={`oep-type oep-type--${pr.type.toLowerCase()}`}>{pr.type}</span>
                    </div>
                    <div class="oep-card-content">
                      <span class="oep-num">OEP-{String(pr.oep).padStart(4, '0')}</span>
                      <span class="oep-title">{pr.title}</span>
                      <span class="oep-date">{formatDate(pr.created)}</span>
                    </div>
                  </a>
                </li>
              ))}
            </ul>
          </>
        ) : (
          <p class="empty-state">No proposals under review. <a href="https://github.com/opensciencearchive/oeps/pulls/new" target="_blank" rel="noopener">Submit one here →</a></p>
        )}
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  const tabs = document.querySelectorAll('.tab');
  const panels = document.querySelectorAll('.tab-panel');

  tabs.forEach((tab) => {
    tab.addEventListener('click', () => {
      const targetId = tab.getAttribute('data-tab');

      tabs.forEach((t) => {
        t.classList.remove('active');
        t.setAttribute('aria-selected', 'false');
      });
      tab.classList.add('active');
      tab.setAttribute('aria-selected', 'true');

      panels.forEach((panel) => {
        panel.classList.remove('active');
        if (panel.id === targetId) {
          panel.classList.add('active');
        }
      });
    });
  });
</script>

<style>
  .main {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-6) var(--space-16);
    box-sizing: border-box;
  }

  /* Page Header */
  .page-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--space-6);
    padding: var(--space-8) 0 var(--space-6);
  }

  .page-title {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: 400;
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-1);
  }

  .page-subtitle {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .github-link {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-decoration: none;
    white-space: nowrap;
    padding-top: var(--space-2);
  }

  .github-link:hover {
    color: var(--color-text);
  }

  /* Proposals - now primary content */
  .proposals {
    margin-top: 0;
    width: 100%;
  }

  .tabs {
    display: flex;
    gap: var(--space-2);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border);
  }

  .tab {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 500;
    padding: var(--space-2) var(--space-4);
    background: none;
    border: 1px solid transparent;
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all 150ms ease;
  }

  .tab:hover {
    color: var(--color-text);
    border-color: var(--color-border);
  }

  .tab.active {
    color: var(--color-text);
    background: var(--color-bg-alt);
    border-color: var(--color-border);
  }

  .tab-count {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    padding: 2px 6px;
    background: var(--color-bg);
    border-radius: 10px;
    color: var(--color-text-subtle);
  }

  .tab.active .tab-count {
    background: var(--color-bg);
    color: var(--color-text-muted);
  }

  /* Tab Panels */
  .tab-panel {
    display: none;
    width: 100%;
  }

  .tab-panel.active {
    display: block;
    padding-top: var(--space-6);
  }

  /* OEP List */
  .oep-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  /* Card - Mobile first (stacked layout) */
  .oep-card {
    display: block;
    padding: var(--space-5);
    text-decoration: none;
    color: inherit;
    background: var(--color-bg-alt);
    border: 1px solid transparent;
    border-radius: var(--radius-md);
    transition: all 150ms ease;
  }

  .oep-card:hover {
    border-color: var(--color-border);
  }

  .oep-card-badge {
    margin-bottom: var(--space-3);
  }

  .oep-card-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .oep-num {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-text);
  }

  .oep-title {
    font-family: var(--font-body);
    font-size: var(--text-base);
    font-weight: 400;
    color: var(--color-text-muted);
    line-height: var(--leading-normal);
  }

  .oep-date {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--color-text-subtle);
    margin-top: var(--space-2);
  }

  .oep-type {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
  }

  /* Desktop: horizontal row layout */
  @media (min-width: 640px) {
    .oep-card {
      display: grid;
      grid-template-columns: 1fr auto;
      align-items: center;
      gap: var(--space-4);
      padding: var(--space-4) var(--space-5);
    }

    .oep-card-badge {
      order: 2;
      margin: 0;
    }

    .oep-card-content {
      order: 1;
      flex-direction: row;
      align-items: baseline;
      gap: var(--space-4);
    }

    .oep-num {
      flex-shrink: 0;
      width: 85px;
    }

    .oep-title {
      flex: 1;
      min-width: 0;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      font-size: var(--text-sm);
    }

    .oep-date {
      flex-shrink: 0;
      margin: 0;
    }
  }

  .oep-type--technical {
    background: hsl(210, 50%, 95%);
    color: hsl(210, 50%, 40%);
  }

  .oep-type--informational {
    background: hsl(40, 50%, 94%);
    color: hsl(40, 50%, 35%);
  }

  .oep-type--process {
    background: hsl(160, 30%, 93%);
    color: hsl(160, 35%, 35%);
  }

  .review-prompt {
    font-size: var(--text-xs);
    color: var(--color-text-subtle);
    margin-bottom: var(--space-2);
  }

  .empty-state {
    padding: var(--space-6) 0;
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .empty-state a {
    color: var(--color-text);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .empty-state a:hover {
    color: var(--color-accent-hover);
  }

  /* Collapsible Info Section */
  .info-section {
    margin-bottom: var(--space-6);
  }

  .info-toggle {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) 0;
    font-size: var(--text-xs);
    color: var(--color-text-subtle);
    cursor: pointer;
    list-style: none;
  }

  .info-toggle::-webkit-details-marker {
    display: none;
  }

  .info-toggle-icon::after {
    content: '+';
    font-family: var(--font-mono);
    font-size: var(--text-sm);
  }

  .info-section[open] .info-toggle-icon::after {
    content: '−';
  }

  .info-toggle:hover {
    color: var(--color-text-muted);
  }

  .info-content {
    padding: var(--space-4) 0 var(--space-6);
  }

  .info-block {
    margin-bottom: var(--space-6);
  }

  .info-block:last-child {
    margin-bottom: 0;
  }

  .info-title {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .info-text {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
  }

  .info-text a {
    color: var(--color-text);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: var(--color-border);
  }

  .info-text a:hover {
    text-decoration-color: var(--color-text);
  }

  /* Types */
  .types {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .type {
    display: flex;
    gap: var(--space-4);
    font-size: var(--text-sm);
  }

  .type-name {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: 500;
    flex-shrink: 0;
    width: 100px;
    color: var(--color-text);
  }

  .type-desc {
    color: var(--color-text-muted);
  }

  /* Mobile */
  @media (max-width: 640px) {
    .page-header {
      flex-direction: column;
      gap: var(--space-3);
    }

    .github-link {
      padding-top: 0;
    }

    .type {
      flex-direction: column;
      gap: var(--space-1);
    }

    .type-name {
      width: auto;
    }
  }
</style>
